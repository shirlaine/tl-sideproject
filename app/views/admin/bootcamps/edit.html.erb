<h1>Bootcamps#Edit</h1>

  <%= simple_form_for [:admin, @bootcamp] do |f| %>
    <%= f.input :name, placeholder: 'TL Bootcamp Batch #' %>
    <%= f.input :startdate, placeholder: 'user@domain.com' %>
    <%= f.input :enddate, placeholder: 'user@domain.com' %>
    <%= f.input :closingdate, placeholder: 'user@domain.com' %>
    <%= f.button :submit %>
    <%= flash[:error] unless flash[:error].blank? %>
    <%= flash[:notice] unless flash[:notice].blank? %>
  <% end %>
